<spritesheet name="RPGCharacter" width="4" height="4" speed="5.0" default="idle">
		<!--
		Syntax for Animaton:
		+ 'x-y' means from x untill y (including x and y)
			e.g. 5-8 means : 'frame 5,6,7 and 8'
		+ Seperate sections via ';'
			e.g. 5;9 means : 'frame 5 and 9
		+ Frames count from left to right, top to bottom
			e.g. :  0	1	2
					3	4	5
					6	7	8
		-->
	<animation name="idle" speed="1.0" repeat="-1">
		3;7;11;15
	</animation>
	<animation name="run down" speed="1.0" repeat="-1">
		0-2
	</animation>
	<animation name="run right" speed="1.0" repeat="-1">
		6-4
	</animation>
	<animation name="run up" speed="1.0" repeat="-1">
		8-10
	</animation>
	<animation name="run left" speed="1.0" repeat="-1">
		12-14
	</animation>
</spritesheet>